{
	"name": "search",
	"description": "The search engine in your codebase",
	"icon": "img/icon.png",
	"publisher": "mintlify",
	"displayName": "Mintlify",
	"version": "1.0.7",
	"repository": {
		"url": "https://github.com/mintlify/vscode"
	},
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:mintlify.searchbar",
		"onCommand:mintlify.searchFiles",
		"onCommand:mintlify.search",
		"onCommand:mintlify.logout",
		"onCommand:mintlify.settings"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "mintlify.searchbar",
				"title": "Open Mint Searchbar"
			},
			{
				"command": "mintlify.search",
				"title": "Mint Search"
			},
			{
				"command": "mintlify.searchFiles",
				"title": "Mint Search Files"
			},
			{
				"command": "mintlify.logout",
				"title": "Logout of Mintlify"
			},
			{
				"command": "mintlify.settings",
				"title": "Open Mintlify Settings"
			},
			{
				"command": "mintlify.refreshHistory",
        "title": "Refresh Search History",
				"icon": {
					"light": "./icons/refresh-light.svg",
					"dark": "./icons/refresh-dark.svg"
				}
			}
		],
		"keybindings": [
			{
				"key": "ctrl+m",
				"mac": "cmd+m",
				"command": "mintlify.searchbar"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mintlify",
					"title": "Mintlify",
					"icon": "img/outline.png"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "search",
				"contents": "[ðŸ”Ž Search (âŒ˜ + M)](command:mintlify.searchbar)\nHave questions? Join our [community](https://discord.gg/6W7GuYuxra)"
			}
		],
		"views": {
			"mintlify": [
				{
					"id": "search",
					"name": "Search Engine"
				},
				{
					"id": "history",
					"name": "History"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "mintlify.refreshHistory",
					"when": "view == history",
					"group": "navigation"
				},
				{
					"command": "mintlify.logout",
					"when": "view == search"
				}
			]
		}
	},
	"scripts": {
		"webpack": "webpack --mode development",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"dev": "npm run webpack && vsce package && code --install-extension search-1.0.7.vsix && rm search-1.0.7.vsix",
		"publish": "npm run package && vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/javascript-time-ago": "^2.0.3",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.3",
		"webpack": "^5.64.2",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"javascript-time-ago": "^2.3.10",
		"url": "^0.11.0",
		"vsce": "^2.3.0"
	}
}
