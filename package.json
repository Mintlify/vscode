{
	"name": "search",
	"description": "The search engine in your codebase",
	"icon": "img/icon.png",
	"publisher": "mintlify",
	"displayName": "Mintlify",
	"version": "0.0.4",
	"repository": {
		"url": "https://github.com/mintlify/vscode"
	},
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:mintlify.search",
		"onCommand:mintlify.logout",
		"onCommand:mintlify.settings"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "mintlify.search",
				"title": "Mint Search"
			},
			{
				"command": "mintlify.logout",
				"title": "Logout of Mintlify"
			},
			{
				"command": "mintlify.settings",
				"title": "Open Mintlify Settings"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+m",
				"mac": "cmd+m",
				"command": "mintlify.search"
			}
		],

		"viewsContainers": {
			"activitybar": [
				{
					"id": "mintlify",
					"title": "Mintlify",
					"icon": "img/outline.png"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "search",
				"contents": "[ðŸ”Ž Search (âŒ˜ + M)](command:mintlify.search)"
			}
		],
		"views": {
			"mintlify": [
				{
					"id": "search",
					"name": "Search Engine"
				},
				{
					"id": "history",
					"name": "History"
				}
			]
		},
		"productIconThemes": [
			{
				"id": "mintlify-icons",
				"label": "Mintlify",
				"path": "./icons/mintlify-product-icon-theme.json"
			}
		]
	},
	"scripts": {
		"webpack": "webpack --mode development",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"dev": "npm run webpack && vsce package && code --install-extension search-0.0.4.vsix && rm search-0.0.4.vsix",
		"publish": "npm run package && vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"ts-loader": "^9.2.6",
		"typescript": "^4.4.3",
		"webpack": "^5.64.2",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"url": "^0.11.0",
		"vsce": "^2.3.0"
	}
}
